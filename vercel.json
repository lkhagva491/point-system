{
  "version": 2,
  "builds": [
    {
      "src": "apps/admin/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "apps/admin/.next"
      }
    },
    {
      "src": "apps/user/package.json", 
      "use": "@vercel/next",
      "config": {
        "distDir": "apps/user/.next"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/apps/admin/$1"
    },
    {
      "src": "/user/(.*)",
      "dest": "/apps/user/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/user/$1"
    }
  ]
}
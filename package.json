{
  "name": "point-system-monorepo",
  "version": "1.0.0",
  "description": "Point System Monorepo with NestJS backend and Next.js frontends",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/ui",
    "apps/backend",
    "apps/admin",
    "apps/user"
  ],
  "scripts": {
    "start": "npm run start:backend",
    "start:backend": "npm run start --workspace=@point-system/backend",
    "start:admin": "npm run start --workspace=@point-system/admin",
    "start:user": "npm run start --workspace=@point-system/user",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:user\"",
    "dev:backend": "npm run dev --workspace=@point-system/backend",
    "dev:admin": "npm run dev --workspace=@point-system/admin",
    "dev:user": "npm run dev --workspace=@point-system/user",
    "build": "npm run build:shared && npm run build:backend && npm run build:admin && npm run build:user",
    "build:shared": "cd packages/shared && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "build:user": "cd apps/user && npm run build",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
